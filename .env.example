# 服务器配置
SERVER_PORT=8080
GIN_MODE=debug

# 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=gin_app
DB_SSLMODE=disable

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT配置
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRE_HOURS=24

# 任务配置
# 执行计划提交倒计时（小时），目标与思路方案审核通过后，执行人需在此时间内提交执行计划
EXECUTION_PLAN_DEADLINE_HOURS=72

#微信配置
WECHAT_OPEN_APPID=     # 开放平台AppID（扫码登录）
WECHAT_OPEN_SECRET=    # 开放平台Secret
WECHAT_MP_APPID=       # 小程序AppID
WECHAT_MP_SECRET=      # 小程序Secret
WECHAT_H5_APPID=       # 公众号AppID
WECHAT_H5_SECRET=      # 公众号Secret


#用户配置
USER_DEFAULT_PASSWORD=password123

# ==================== 上传模块配置 ====================
# 默认驱动: local, minio, aliyun
UPLOAD_DEFAULT_DRIVER=local

# 文件类型到驱动的映射（格式: type:driver,type:driver）
# 示例: image:local,video:minio,audio:minio
UPLOAD_TYPE_DRIVER_MAPPING=image:local,video:minio,audio:minio

# 本地存储配置
UPLOAD_LOCAL_ENABLED=true
UPLOAD_LOCAL_BASE_PATH=./uploads
UPLOAD_LOCAL_BASE_URL=/uploads
UPLOAD_LOCAL_MAX_SIZE=104857600  # 100MB

# MinIO配置
UPLOAD_MINIO_ENABLED=false
UPLOAD_MINIO_ENDPOINT=localhost:9000
UPLOAD_MINIO_ACCESS_KEY=minioadmin
UPLOAD_MINIO_SECRET_KEY=minioadmin
UPLOAD_MINIO_BUCKET=uploads
UPLOAD_MINIO_USE_SSL=false
UPLOAD_MINIO_REGION=
UPLOAD_MINIO_BASE_URL=  # 可选，用于CDN加速

# 阿里云OSS配置（预留）
UPLOAD_ALIYUN_ENABLED=false
UPLOAD_ALIYUN_ENDPOINT=
UPLOAD_ALIYUN_ACCESS_KEY=
UPLOAD_ALIYUN_SECRET_KEY=
UPLOAD_ALIYUN_BUCKET=
UPLOAD_ALIYUN_BASE_URL=
